<div class="container">

  <div class="card my-4">

    <h4><%= @post.title %></h4>
    <h6><%= @post.author %></h6>
    <h6>Published: <%= @post.date_published.strftime("%a %b %e at %l:%M %p") %></h6>
    <h6><%= @post.content %></h6>

    <%# ADMIN %>
    <%= link_to "Edit this post", edit_post_path, class:"btn btn-info"%>
    <%= link_to 'Delete this post', post_path(@post), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger"  %>
    <%# ADMIN %>
  </div>

</div>

<%= link_to "See all posts", posts_path, class:"btn btn-primary"%>
